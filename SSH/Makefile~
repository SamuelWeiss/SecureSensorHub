# -*- Mode: Makefile; indent-tabs-mode:t; tab-width: 4 -*-

all:




install:
	echo "Running Makefile"
	mkdir -p $(DESTDIR)/bin
	cp -a main.py $(DESTDIR)/bin/SSH
	chmod a+x $(DESTDIR)/bin/SSH
	cp -a server.js $(DESTDIR)/bin/server
	chmod a+x $(DESTDIR)/bin/server
	npm install passport-facebook

	echo "Makefile completed"
